using UnityEngine;

public class VoxelNarutoScene : MonoBehaviour
{
    [Header("Prefabs")]
    public GameObject playerPrefab;
    public GameObject enemyPrefab;
    public ParticleSystem fireEffect;

    [Header("Background")]
    public GameObject backgroundQuad;
    public Texture2D narutoTexture;

    void Start()
    {
        // 1️⃣ إنشاء أرضية مكعبة
        for (int x = -10; x <= 10; x++)
        {
            for (int z = -10; z <= 10; z++)
            {
                GameObject block = GameObject.CreatePrimitive(PrimitiveType.Cube);
                block.transform.position = new Vector3(x, 0, z);
                block.GetComponent<Renderer>().material.color = Color.green;
            }
        }

        // 2️⃣ إنشاء اللاعب
        if (playerPrefab != null)
            Instantiate(playerPrefab, new Vector3(0, 1, 0), Quaternion.identity);

        // 3️⃣ إنشاء العدو
        if (enemyPrefab != null)
            Instantiate(enemyPrefab, new Vector3(5, 1, 5), Quaternion.identity);

        // 4️⃣ إضافة تأثير النار
        if (fireEffect != null)
        {
            ParticleSystem fire = Instantiate(fireEffect, new Vector3(0, 1, 0), Quaternion.identity);
            fire.Play();
        }

        // 5️⃣ تعيين خلفية ناروتو
        if (backgroundQuad != null && narutoTexture != null)
        {
            Renderer rend = backgroundQuad.GetComponent<Renderer>();
            rend.material.mainTexture = narutoTexture;
        }
    }
}
