<h1>C·ªù Ng√°o ‚Äì B·∫£n M·ªü R·ªông</h1>
<p>3 qu√¢n m·ªõi: üèπ Cung th·ªß, üí£ Ph√°o binh, üõ°Ô∏è Gi√°o binh</p>
<div id="board"></div>
<script>
const pieces = {
  'A': 'üèπ', // Archer
  'C': 'üí£', // Cannon
  'S': 'üõ°Ô∏è', // Spearman
  'P': '‚ôü', // Pawn
  'R': '‚ôú', // Rook
  'N': '‚ôû', // Knight
  'B': '‚ôù', // Bishop
  'Q': '‚ôõ', // Queen
  'K': '‚ôö'  // King
};let board = Array.from({length: 8}, () => Array(8).fill(null));

function initBoard() { // Example setup with custom pieces in back row board[0][2] = 'A'; board[0][5] = 'C'; board[0][4] = 'S'; board[7][2] = 'A'; board[7][5] = 'C'; board[7][4] = 'S'; renderBoard(); }

let selected = null;

function renderBoard() { let html = '<table>'; for (let i = 0; i < 8; i++) { html += '<tr>'; for (let j = 0; j < 8; j++) { let color = (i + j) % 2 === 0 ? 'white' : 'black'; html += <td class="${color}" onclick="cellClick(${i},${j})">${board[i][j] ? pieces[board[i][j]] : ''}</td>; } html += '</tr>'; } html += '</table>'; document.getElementById('board').innerHTML = html; }

function cellClick(i, j) { if (!selected && board[i][j]) { selected = {x: i, y: j}; } else if (selected) { board[i][j] = board[selected.x][selected.y]; board[selected.x][selected.y] = null; selected = null; renderBoard(); } }

initBoard(); </script>

</body>
</html>
