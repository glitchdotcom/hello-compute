<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Car Racing Game</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <div id="gameArea">
    <div id="playerCar">
      <div class="roof"></div>
      <div class="body"></div>
      <div class="wheel left"></div>
      <div class="wheel right"></div>
    </div>
  </div>

  <!-- Mobile Controller -->
  <div id="controller#gameArea {
  width: 300px;
  height: 500px;
  background: #555;
  position: relative;
  overflow: hidden;
  border: 2px solid black;
  margin: auto;
}

#playerCar {
  position: absolute;
  bottom: 10px;
  left: 125px;
  width: 50px;
  height: 100px;
}

.roof {
  width: 40px;
  height: 20px;
  background: #ff4d4d;
  border-radius: 10px 10px 0 0;
  position: absolute;
  top: 0;
  left: 5px;
}

.body {
  width: 50px;
  height: 60px;
  background: red;
  border-radius: 5px;
  position: absolute;
  top: 20px;
  box-shadow: 0 5px 5px rgba(0,0,0,0.3);
}

.wheel {
  width: 12px;
  height: 12px;
  background: black;
  border-radius: 50%;
  position: absolute;
  bottom: 0;
}

.wheel.left { left: 5px; }
.wheel.right { right: 5px; }

.obstacle {
  width: 50px;
  height: 100px;
  background: blue;
  position: absolute;
  top: -100px;
  border-radius: 5px;
}

#controller {
  text-align: center;
  margin-top: 10px;
}

#controller button {
  width: 80px;
  height: 50px;
  font-size: 24px;
  margin: 5px;
  border-radius: 10px;
  border: none;
  background-color: #333;
  color: white;
}window.onload = function() {
  const gameArea = document.getElementById("gameArea");
  const playerCar = document.getElementById("playerCar");
  let carPosition = 125;
  let obstacles = [];

  // Car movement
  function moveCar(direction) {
    if (direction === "left" && carPosition > 0) carPosition -= 20;
    if (direction === "right" && carPosition < 250) carPosition += 20;
    playerCar.style.left = carPosition + "px";
  }

  // Keyboard control
  document.addEventListener("keydown", (e) => {
    if (e.key === "ArrowLeft") moveCar("left");
    if (e.key === "ArrowRight") moveCar("right");
  });

  // Mobile controller
  document.getElementById("leftBtn").addEventListener("click", () => moveCar("left"));
  document.getElementById("rightBtn").addEventListener("click", () => moveCar("right"));

  // Create obstacles
  function createObstacle() {
    const obs = document.createElement("div");
    obs.classList.add("obstacle");
    obs.style.left = Math.floor(Math.random() * 6) * 50 + "px";
    gameArea.appendChild(obs);
    obstacles.push(obs);
  }

  // Move obstacles
  function moveObstacles() {
    obstacles.forEach((obs, index) => {
      let top = parseInt(obs.style.top || "-100");
      if (top > 500) {
        obs.remove();
        obstacles.splice(index, 1);
      } else {
        obs.style.top = top + 5 + "px";
      }
    });
  }

  setInterval(createObstacle, 2000);
  setInterval(moveObstacles, 50);
};
